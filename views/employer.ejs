<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Employer Dashboard</title>
    <!-- CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css"
    />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11" />
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <form action="/logout" method="POST">
      <button type="button" class="btn btn-primary btn-lg">Logout</button>
    </form>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Job Listings</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="#">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Logout</a>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container mt-5">
      <div class="row">
        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Total Jobs</h5>
              <p class="card-text">500</p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Active Jobs</h5>
              <p class="card-text">200</p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Pending Jobs</h5>
              <p class="card-text">50</p>
            </div>
          </div>
        </div>
      </div>
      <div class="row mt-5">
        <div class="col-md-12">
          <h2>Job Listings</h2>
          <table id="job-listings" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Location</th>
                <th>Status</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Web Developer</td>
                <td>Technology</td>
                <td>New York</td>
                <td>Active</td>
                <td>
                  <button class="btn btn-primary btn-sm">View</button>
                  <button class="btn btn-danger btn-sm">Delete</button>
                </td>
              </tr>
              <tr>
                <td>Marketing Manager</td>
                <td>Marketing</td>
                <td>San Francisco</td>
                <td>Pending</td>
                <td>
                  <button class="btn btn-primary btn-sm">View</button>
                  <button class="btn btn-danger btn-sm">Delete</button>
                </td>
              </tr>
              <tr>
                <td>Accountant</td>
                <td>Finance</td>
                <td>Chicago</td>
                <td>Active</td>
                <td>
                  <button class="btn btn-primary btn-sm">View</button>
                  <button class="btn btn-danger btn-sm">Delete</button>
                </td>
              </tr>
            </tbody>
          </table>
          <button id="add-job-btn" class="btn btn-success">Add Job</button>
        </div>
      </div>
    </div>
    <!-- Add Job Modal -->
    <div
      class="modal fade"
      id="add-job-modal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="add-job-modal-label"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="add-job-modal-label">Add Job</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form id="add-job-form">
              <div class="form-group">
                <label for="job-title">Title</label>
                <input
                  type="text"
                  class="form-control"
                  id="job-title"
                  name="job_title"
                  required
                />
              </div>
              <div class="form-group">
                <label for="job-category">Category</label>
                <input
                  type="text"
                  class="form-control"
                  id="job-category"
                  name="job_category"
                  required
                />
              </div>
              <div class="form-group">
                <label for="job-location">Location</label>
                <input
                  type="text"
                  class="form-control"
                  id="job-location"
                  name="job_location"
                  required
                />
              </div>
              <div class="form-group">
                <label for="job-description">Description</label>
                <textarea
                  class="form-control"
                  id="job-description"
                  name="job_description"
                  rows="3"
                  required
                ></textarea>
              </div>
              <div class="form-group">
                <label for="job-status">Status</label>
                <select class="form-control" id="job-status" name="job_status">
                  <option value="Active">Active</option>
                  <option value="Pending">Pending</option>
                </select>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Close
            </button>
            <button id="submit-job-btn" type="button" class="btn btn-primary">
              Submit
            </button>
          </div>
        </div>
      </div>
    </div>
    <!-- View Job Modal -->
    <div
      class="modal fade"
      id="view-job-modal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="view-job-modal-label"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="view-job-modal-label">View Job</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form id="view-job-form">
              <div class="form-group">
                <label for="job-title-view">Title</label>
                <input
                  type="text"
                  class="form-control"
                  id="job-title-view"
                  name="job_title_view"
                  disabled
                />
              </div>
              <div class="form-group">
                <label for="job-category-view">Category</label>
                <input
                  type="text"
                  class="form-control"
                  id="job-category-view"
                  name="job_category_view"
                  disabled
                />
              </div>
              <div class="form-group">
                <label for="job-location-view">Location</label>
                <input
                  type="text"
                  class="form-control"
                  id="job-location-view"
                  name="job_location_view"
                  disabled
                />
              </div>
              <div class="form-group">
                <label for="job-description-view">Description</label>
                <textarea
                  class="form-control"
                  id="job-description-view"
                  name="job_description_view"
                  rows="3"
                  disabled
                ></textarea>
              </div>
              <div class="form-group">
                <label for="job-status-view">Status</label>
                <select
                  class="form-control"
                  id="job-status-view"
                  name="job_status_view"
                  disabled
                >
                  <option value="Active">Active</option>
                  <option value="Pending">Pending</option>
                </select>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Close
            </button>
            <button id="edit-job-btn" type="button" class="btn btn-primary">
              Edit
            </button>
          </div>
        </div>
      </div>
    </div>
    <!-- Edit Job Modal -->
    <div
      class="modal fade"
      id="edit-job-modal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="edit-job-modal-label"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="edit-job-modal-label">Edit Job</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form id="edit-job-form">
              <div class="form-group">
                <label for="edit-job-title">Title</label>
                <input
                  type="text"
                  class="form-control"
                  id="edit-job-title"
                  name="title"
                  required
                />
              </div>
              <div class="form-group">
                <label for="edit-job-description">Description</label>
                <textarea
                  class="form-control"
                  id="edit-job-description"
                  name="description"
                  rows="3"
                  required
                ></textarea>
              </div>
              <div class="form-group">
                <label for="edit-job-location">Location</label>
                <input
                  type="text"
                  class="form-control"
                  id="edit-job-location"
                  name="location"
                  required
                />
              </div>
              <div class="form-group">
                <label for="edit-job-salary">Salary</label>
                <input
                  type="number"
                  class="form-control"
                  id="edit-job-salary"
                  name="salary"
                  required
                />
              </div>
              <input type="hidden" id="edit-job-id" name="jobId" />
              <button type="submit" class="btn btn-primary">
                Save changes
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- JAVASCRIPT FILES -->
    <script src="./js/jquery.min.js"></script>
    <script src="./js/bootstrap.min.js"></script>
    <script src="./js/owl.carousel.min.js"></script>
    <script src="./js/counter.js"></script>
    <script src="./js/custom.js"></script>
  </body>
</html>
